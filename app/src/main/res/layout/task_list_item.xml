<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView18"
        android:layout_width="365dp"
        android:layout_height="153dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="383dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_asset_2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemHeadline"
                android:layout_width="175dp"
                android:layout_height="51dp"
                android:text="@={item.Headline}" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={item.Description}" />

            <TextView
                android:id="@+id/itemWage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={item.Wage}" />

            <TextView
                android:id="@+id/itemLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={item.Location}" />

            <TextView
                android:id="@+id/itemDistance"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:text="@={item.Distance}" />

            <TextView
                android:id="@+id/itemTaskType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={item.TaskType}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>